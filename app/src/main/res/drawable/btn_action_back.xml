<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_grey200"></solid>
            <stroke android:color="@color/color_grey200" android:width="1dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_grey200"></solid>
            <stroke android:color="@color/color_grey200" android:width="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_grey100"></solid>
            <stroke android:color="@color/color_grey200" android:width="1dp"/>
        </shape>
    </item>
    
</selector>